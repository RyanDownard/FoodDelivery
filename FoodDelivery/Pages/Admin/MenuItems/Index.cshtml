@page

@{
    ViewData["Title"] = "Menu Items";
}

<div class="container border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Menu Items</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-page="Upsert" asp-route-id="0" class="btn btn-primary">
                <i class="fas fa-plus"></i>&nbsp;Create New
            </a>
        </div>
    </div>
</div>
<br />
<table id="DT_load" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                Item Name
            </th>
            <th>
                Price
            </th>
            <th>
                Category
            </th>
            <th>
                Food Type
            </th>
            <th></th>
        </tr>
    </thead>

</table>

@section Scripts
{
    <script src="~/js/menuitem.js"></script>
}
