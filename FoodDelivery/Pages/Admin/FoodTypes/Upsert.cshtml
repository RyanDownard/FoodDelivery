@page
@model FoodDelivery.Pages.Admin.FoodTypes.UpsertModel

<form method="post" asp-action="Upsert">
    <div class="container">
        <div class="row px-2 mx-2 backgroundWhite border">
            <div asp-validation-summary="All" class="text-danger">
            </div>
            <div class="col-12 px-3" style="border-bottom: 1px solid #325d88">
                <h2 class="text-primary">@(Model.FoodType.ID > 0 ? "Update" : "Create") Food Type</h2>
            </div>
            <input type="hidden" asp-for="FoodType.ID" />
            <div class="col-8 pt-3">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="FoodType.Name"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="FoodType.Name" />
                        <span class="text-danger" asp-validation-for="FoodType.Name"></span>
                    </div>
                </div>
            </div>
            <div class="col-8 pt-3">
                <div class="row">
                    <div class="offset-3 col-9">
                        <div class="row">
                            <div class="col-6">
                                <button type="submit" class="btn btn-primary form-control">@(Model.FoodType.ID > 0 ? "Update" : "Create")</button>
                            </div>
                            <div class="col-6">
                                <a asp-page="./Index" class="btn btn-success form-control">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>